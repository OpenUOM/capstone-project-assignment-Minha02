{
  "name": "capstone-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "pretest": "rm -f test.sqlite && NODE_ENV=test knex migrate:rollback --all && NODE_ENV=test knex migrate:latest",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test:specific": "NODE_ENV=test jest -t",
    "start": "node index.js",
    "delete-db": "rm -f db.sqlite test.sqlite",
    "migrate": "npm run delete-db && knex migrate:latest",
    "seed": "knex seed:run",
    "db": "npm run migrate && npm run seed"
  },
  "author": "keetmalin.13@cse.mrt.ac.lk",
  "license": "ISC",
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/test/**/*.test.js"],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.17.3",
    "forever": "^4.0.3",
    "knex": "^2.1.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@angular/cli": "^19.1.4",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "jest": "^27.5.1",
    "supertest": "^6.2.2",
    "wait-on": "^8.0.2"
  }
}
